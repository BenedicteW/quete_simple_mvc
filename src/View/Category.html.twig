{% extends 'layout.html.twig' %}


{% block title %}

    Categories

{% endblock %}

{% block content %}


<section>
    <h1>Categories</h1>
    <ul>
    {% for category in categories %}
        <li><a href="/category/{{ category.id }}">{{ category.name }}</a></li>
    {% endfor %}
    </ul>
    <a href="/category/add/">Add new category</a>
</section>


{% endblock %}

