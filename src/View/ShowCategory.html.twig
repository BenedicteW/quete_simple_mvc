{% extends 'layout.html.twig' %}

{% block title %}

    Category {{ category.name }}

{% endblock %}

{% block content %}

<main>
    <h1>Category {{ category.name }}</h1>
    <ul>
        <li>Id : {{ category.id }}</li>
    </ul>
    <a href='/category/edit/{{ category.id }}'>Edit this category</a>
    <a href='/category/delete/{{ category.id }}'>Delete this category</a>
    <a href='/categories'>Back to list</a>
</main>

{% endblock %}